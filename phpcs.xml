<?xml version="1.0"?>
<ruleset name="Custom">
    <description>Custom ruleset pour phpcs-exercice</description>
    <!-- Dossier à analyser -->
    <file>src/</file>
    <!-- Norme à utiliser -->
    <rule ref="PEAR"/>
    <!-- Spécifie la version PHP -->
    <config name="testVersion" value="8.4-"/>
    <!-- Liste des extensions à vérifier -->
    <arg name="extensions" value="php,html"/>
</ruleset>
